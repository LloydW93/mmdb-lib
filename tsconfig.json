{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "outDir": "lib",

    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
  },
  "exclude": [
    "__mocks__",
    "**/*.spec.ts",
    "**/*.test.ts",
    "lib",
    "node_modules",
    "test/imports/*.ts"
  ]
}
